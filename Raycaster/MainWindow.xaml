<Window x:Class="Raycaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Raycaster"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="660">
    <Grid>
        <Image x:Name="viewportImage" Source="{ Binding Path=ImageBuffer }" HorizontalAlignment="Left" Height="480" Margin="0,0,0,0" VerticalAlignment="Top" Width="640"/>
    </Grid>
</Window>
